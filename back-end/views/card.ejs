<body>
    

 <div class="container">
	 <div class="left">
		 <div class="row">
			 <div class="col-lg-12">
				 <h1 class="text-center">Карта Банка</h1>
			 </div>
			 <h2><%= query.rate %></h2>
			 <h2><%= query.price %></h2>

		
		 </div>
		 <div class="card-wraper">
			 <div class="card-back">
				 
				 <div class="row">
					 <div class="col-lg-12">
						 <div class="card-back-line"></div>
					 </div>
				 </div>
				 <div class="row">
						<div class="col-lg-12">
						<input type="text" id="cvv">
						</div>
					</div>
			 </div>
			 <div class="card-front">
				<div class="row">
					<div class="col-lg-3">
							<img src="" alt="card-logo" class="card-logo"> 
					</div>
					<div class="col-lg-2  ">
						<img src="/images/mastercard.svg" alt="card-image" class="card-image">
				</div>
				</div>

					
					<div class="row">
							<div class="col-lg-12 ">
									<input type="number" id="card-number">
									
							</div>
						</div>
				
								<div class="row">
										<div class="col-lg-3">
												<input type="text" id="card-year">
										</div>
										<div class="col-lg-3 ">
												<input type="text" id="card-mounth">
										</div>
										</div>
										
							
                     
				 

			 </div>
		 </div>
	 </div>
    
</div> 
           



		


<script src="node_modules/card-info/dist/card-info.min.js"></script>
    <script src="/js/main3.js">
	</script> 
	<script src="https://code.jquery.com/jquery-3.3.1.slim.min.js">
	</script> 
